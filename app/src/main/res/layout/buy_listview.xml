<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/buy_lv_img"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/dq"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/buy_id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奔驰威霆"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buy_lv_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013款 3.0L 精英版"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/buy_lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年7月"
                android:textColor="#9d9d9d"
                android:textSize="13sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#9d9d9d"/>

            <TextView
                android:id="@+id/buy_lv_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.7万公里"
                android:textColor="#9d9d9d"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#9d9d9d"/>

            <TextView
                android:id="@+id/buy_lv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武汉"
                android:textColor="#9d9d9d"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buy_id_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.80万"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy_lv_newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新车:40.05万"
                android:textColor="#9d9d9d"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>